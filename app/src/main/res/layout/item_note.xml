<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top Bar with App Name and Profile Settings Icon -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notes App"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/profileSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_username"
            android:contentDescription="@string/username"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Scrollable Note Previews in a Box-Style Container -->
    <ScrollView
        android:id="@+id/notesScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/addNoteButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/note_box_background"
            android:elevation="4dp">

            <!-- Note Preview Titles (Clickable TextViews for each note) -->
            <TextView
                android:id="@+id/notePreview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Note 1: Title Preview"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/notePreview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Note 2: Title Preview"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@android:color/black"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Add more note previews as needed -->
        </LinearLayout>
    </ScrollView>

    <!-- Button to Add New Note -->
    <Button
        android:id="@+id/addNoteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Note"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
